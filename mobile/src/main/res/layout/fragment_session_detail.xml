<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.google.samples.apps.iosched.ui.sessiondetail.SessionDetailViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MergeRootFrame">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="?actionBarSize"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_normal">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/margin_normal" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/margin_normal" />

                <ImageView
                    android:id="@+id/detail_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="@string/session_detail_header_aspect"
                    android:contentDescription="@string/a11y_session_detail_video_description"
                    app:imageUrl="@{viewModel.session.photoUrl}" />

                <!-- TODO add animated image -->

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/detail_image"
                    app:layout_constraintTop_toTopOf="@id/detail_image"
                    app:layout_constraintEnd_toEndOf="@id/detail_image"
                    app:layout_constraintBottom_toBottomOf="@id/detail_image"
                    android:scaleType="center"
                    android:background="@color/scrim"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{() -> viewModel.onPlayVideo()}"
                    android:contentDescription="@string/a11y_play_button_description"
                    app:srcCompat="@drawable/ic_play"
                    app:goneUnless="@{viewModel.isPlayable}" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_title_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.65" />

                <!-- Title on header: only shown if there isn't a photo header. -->
                <TextView
                    android:id="@+id/session_detail_title"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toTopOf="@id/detail_image"
                    app:layout_constraintEnd_toEndOf="@id/guideline_title_end"
                    app:layout_constraintBottom_toBottomOf="@id/detail_image"
                    app:layout_constraintVertical_bias="1"
                    android:paddingTop="72dp"
                    android:paddingBottom="@dimen/margin_normal"
                    android:text="@{viewModel.session.title}"
                    tools:text="Session Title"
                    app:goneUnless="@{!viewModel.isPlayable}"
                    style="@style/Widget.IOSched.SessionDetailTitle" />

                <Space
                    android:id="@+id/spacer"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@id/detail_image" />

                <!-- Title below header: shown if there is a photo header -->
                <TextView
                    android:id="@+id/session_detail_with_video_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/spacer"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    android:paddingBottom="@dimen/margin_normal"
                    android:text="@{viewModel.session.title}"
                    app:goneUnless="@{viewModel.isPlayable}"
                    tools:text="Session Title"
                    style="@style/Widget.IOSched.SessionDetailTitle" />

                <TextView
                    android:id="@+id/session_detail_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/session_detail_with_video_title"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:sessionDetailEndTime="@{viewModel.session.endTime}"
                    app:sessionDetailStartTime="@{viewModel.session.startTime}"
                    tools:text="Session Time" />

                <TextView
                    android:id="@+id/session_detail_room"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/session_detail_time"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    android:layout_marginTop="@dimen/spacing_micro"
                    android:text="@{viewModel.session.room.name}"
                    tools:text="Session Location" />

                <!-- todo(tiem) b/74617185 -->
                <ImageView
                    android:id="@+id/session_detail_recorded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_micro"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/session_detail_room"
                    android:contentDescription="@string/a11y_session_detail_video_icon"
                    app:srcCompat="@drawable/ic_livestreamed" />

                <TextView
                    android:id="@+id/session_detail_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/session_detail_recorded"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:paddingTop="@dimen/spacing_normal"
                    android:text="@{viewModel.session.abstract}"
                    android:textColor="?android:textColorPrimary"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus et mauris blandit, porttitor leo sit amet, tincidunt tellus. Proin at rutrum risus. Sed volutpat tellus  " />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:orientation="horizontal"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@+id/session_detail_description"
                    app:sessionTags="@{viewModel.session.tags}" />

                <Button
                    android:id="@+id/session_detail_rate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:text="@string/rate_session"
                    app:goneUnless="@{viewModel.showRateButton}"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/tags"
                    tools:text="Rate Session" />

                <LinearLayout
                    android:id="@+id/session_detail_speaker_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/session_detail_rate_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingTop="@dimen/margin_normal"
                    android:orientation="vertical"
                    app:sessionSpeakers="@{viewModel.session.speakers}"
                    app:goneUnless="@{viewModel.hasSpeakers}"
                    tools:listitem="@layout/item_speaker_detail">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/margin_normal"
                        android:minHeight="?actionBarSize"
                        android:gravity="start|center_vertical"
                        android:textAppearance="@style/TextAppearance.IOSched.Subhead"
                        android:text="@string/session_detail_speakers_header" />

                </LinearLayout>

                <!-- todo bind related sessions b/72689885 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/session_detail_speaker_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingTop="@dimen/margin_normal"
                    android:orientation="vertical"
                    app:goneUnless="@{viewModel.hasRelated}"
                    tools:listitem="@layout/item_speaker_detail">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/margin_normal"
                        android:minHeight="?actionBarSize"
                        android:gravity="start|center_vertical"
                        android:textAppearance="@style/TextAppearance.IOSched.Subhead"
                        android:text="@string/session_detail_related_header" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.NestedScrollView>

        <!-- TODO what to do about this when scrolled?? -->
        <ImageButton
            android:id="@+id/up"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_gravity="start|top"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_arrow_back" />

        <!-- Workaround for b/72034805 — BAB shadow can't extend beyond bounds nor concave shape -->
        <View
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bab_fake_shadow" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            app:fabAlignmentMode="end"
            android:elevation="6dp"
            app:contentInsetStart="@dimen/margin_normal" />

        <!-- TODO user proper icon & bind click event -->
        <com.google.android.material.widget.FloatingActionButton
            android:id="@+id/session_detail_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/toolbar"
            app:srcCompat="@drawable/ic_star"
            app:backgroundTint="@color/white" />

    </android.support.design.widget.CoordinatorLayout>

</layout>
