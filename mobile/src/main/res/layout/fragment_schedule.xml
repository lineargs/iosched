<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.google.samples.apps.iosched.ui.schedule.ScheduleViewModel" />

        <variable
            name="isAgendaPage"
            type="android.databinding.ObservableBoolean" />

    </data>

    <com.google.samples.apps.iosched.widget.NestedScrollingCoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/include_schedule_appbar"
            app:viewModel="@{viewModel}" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:pageMargin="@{@dimen/spacing_normal}"
            app:pageMarginDrawable="@{@drawable/page_margin}" />

        <!-- TODO(b/72711711): Provide a better loading indicator -->
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/light_grey"
            app:goneUnless="@{viewModel.isLoading}" />

        <!--
          ~ Mimic the real BottomNavigationView in the activity. It has the same height and will be
          ~ translated whenever the real one moves. We need it for layout_insetEdge.
          -->
        <View
            android:id="@+id/dummy_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_navigation_height"
            android:layout_gravity="bottom"
            app:layout_insetEdge="bottom" />

        <com.google.android.material.widget.FloatingActionButton
            android:id="@+id/filter_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/margin_normal"
            android:contentDescription="@string/filters"
            app:fabSize="auto"
            app:fabVisibility="@{!viewModel.hasAnyFilters &amp;&amp; !isAgendaPage}"
            app:hoveredFocusedTranslationZ="0dp"
            app:pressedTranslationZ="0dp"
            app:srcCompat="@drawable/ic_filter" />

        <!--
          ~ We use a margin to prevent the status bar from drawing over the shadow when the sheet
          ~ expands. However, marginTop pushes the sheet down from it's peekHeight when collapsed.
          ~ Using marginBottom achieves the desired effect.
          -->
        <fragment
            android:id="@+id/filter_sheet"
            android:name="com.google.samples.apps.iosched.ui.schedule.filters.ScheduleFilterFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            app:behavior_hideable="true"
            app:behavior_skipCollapsed="true"
            app:behavior_peekHeight="@dimen/bottom_sheet_peek_height"
            app:layout_behavior="com.google.samples.apps.iosched.widget.BottomSheetBehavior"
            tools:layout="@layout/fragment_schedule_filter" />

    </com.google.samples.apps.iosched.widget.NestedScrollingCoordinatorLayout>

</layout>
