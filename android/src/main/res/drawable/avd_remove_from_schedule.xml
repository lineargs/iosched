<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@drawable/ic_remove_from_schedule_anim">

    <!-- line 1 -->
    <target
        android:name="line_1"
        android:animation="@animator/remove_from_schedule_line_1_untrim_start" />

    <target
        android:name="line_1"
        android:animation="@animator/remove_from_schedule_line_1_untrim_end" />

    <target
        android:name="line_1_group"
        android:animation="@animator/remove_from_schedule_line_1_rotate" />

    <target
        android:name="line_1_group"
        android:animation="@animator/remove_from_schedule_line_1_translate_x" />

    <target
        android:name="line_1_group"
        android:animation="@animator/remove_from_schedule_line_1_translate_y" />


    <!-- line 2 -->
    <target
        android:name="line_2"
        android:animation="@animator/remove_from_schedule_line_2_trim_start" />

    <target
        android:name="line_2"
        android:animation="@animator/remove_from_schedule_line_2_trim_end" />

    <target
        android:name="line_2_group"
        android:animation="@animator/remove_from_schedule_line_2_rotate" />

    <target
        android:name="line_2_group"
        android:animation="@animator/remove_from_schedule_line_2_translate_x" />

    <target
        android:name="line_2_group"
        android:animation="@animator/remove_from_schedule_line_2_translate_y" />


    <!-- rotate the whole thing -->
    <target
        android:name="root"
        android:animation="@animator/remove_from_schedule_rotate" />


</animated-vector>