<web-app
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">
  <display-name>IOSched updater</display-name>

  <context-param>
      <description>accountKey</description>
      <param-name>accountKey</param-name>
      <param-value>[path/to/credentials.json]</param-value>
  </context-param>
  <context-param>
      <description>databaseUrl</description>
      <param-name>databaseUrl</param-name>
      <param-value>[database url]</param-value>
  </context-param>
  <context-param>
    <description>eventId</description>
    <param-name>eventId</param-name>
    <param-value>[eventId]</param-value>
  </context-param>
  <context-param>
    <description>eventManagerUrl</description>
    <param-name>eventManagerUrl</param-name>
    <param-value>[eventManagerUrl]</param-value>
  </context-param>

  <!-- ///////////////////////////////////// Objectify /////////////////////////////// -->
  <filter>
      <filter-name>ObjectifyFilter</filter-name>
      <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
  </filter>
  <filter-mapping>
      <filter-name>ObjectifyFilter</filter-name>
      <url-pattern>/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>INCLUDE</dispatcher>
      <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <listener>
      <listener-class>com.google.samples.apps.iosched.server.OfyHelper</listener-class>
  </listener>

  <!-- ///////////////////////////////////// Userdata (Endpoints) /////////////////////////////// -->
  <servlet>
    <servlet-name>SystemServiceServlet</servlet-name>
    <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
    <init-param>
      <param-name>services</param-name>
      <param-value>com.google.samples.apps.iosched.server.userdata.UserdataEndpoint, com.google.samples.apps.iosched.server.registration.RegistrationEndpoint, com.google.samples.apps.iosched.server.feed.ServingUrlEndpoint</param-value>
    </init-param>
    <init-param>
      <param-name>restricted</param-name>
      <param-value>false</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>SystemServiceServlet</servlet-name>
    <url-pattern>/_ah/spi/*</url-pattern>
  </servlet-mapping>

  <!-- ////////////////////////////////// Schedule Updater ////////////////////////////////// -->

    <servlet>
        <servlet-name>logData</servlet-name>
        <servlet-class>com.google.samples.apps.iosched.server.schedule.server.servlet.LogDataServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logData</servlet-name>
        <url-pattern>/admin/schedule/log_data</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>runupdate</servlet-name>
        <servlet-class>com.google.samples.apps.iosched.server.schedule.server.servlet.RunUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>runupdate</servlet-name>
        <url-pattern>/admin/schedule/runupdate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cmsupdate</servlet-name>
        <servlet-class>com.google.samples.apps.iosched.server.schedule.server.servlet.CMSUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cmsupdate</servlet-name>
        <url-pattern>/admin/schedule/cmsupdate</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- ////////////////////////////////// GCM Support ////////////////////////////////// -->
    <!-- context initializer -->
    <listener>
        <listener-class>
            com.google.samples.apps.iosched.server.gcm.db.ApiKeyInitializer
        </listener-class>
    </listener>

    <!-- inbound device endpoints -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>
            com.google.samples.apps.iosched.server.gcm.device.RegisterServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/gcm/register/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UnregisterServlet</servlet-name>
        <servlet-class>
            com.google.samples.apps.iosched.server.gcm.device.UnregisterServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnregisterServlet</servlet-name>
        <url-pattern>/gcm/unregister/*</url-pattern>
    </servlet-mapping>

    <!-- outbound device endpoints -->
    <servlet>
        <servlet-name>MulticastQueueWorker</servlet-name>
        <servlet-class>
            com.google.samples.apps.iosched.server.gcm.device.MulticastQueueWorker
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MulticastQueueWorker</servlet-name>
        <url-pattern>/queue/send</url-pattern>
    </servlet-mapping>

    <!-- API endpoints -->
    <servlet>
        <servlet-name>SendMessageServlet</servlet-name>
        <servlet-class>
            com.google.samples.apps.iosched.server.gcm.api.SendMessageServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendMessageServlet</servlet-name>
        <url-pattern>/gcm/send/*</url-pattern>
    </servlet-mapping>

    <!-- Cron endpoints -->
    <!-- Restricted to admin users only to prevent unauthorized execution. -->
    <servlet>
        <servlet-name>VacuumDbServlet</servlet-name>
        <servlet-class>
            com.google.samples.apps.iosched.server.gcm.cron.VacuumDbServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VacuumDbServlet</servlet-name>
        <url-pattern>/cron/vacuum_db</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- HTTPS requirement -->
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

