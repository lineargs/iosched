<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal">

    <TextView
        android:id="@+id/slot_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/padding_normal"
        android:textAppearance="@style/Schedule.ItemTitle.Break"
        tools:text="Breakfast" />

    <TextView
        android:id="@+id/slot_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slot_title"
        android:paddingBottom="@dimen/padding_normal"
        android:layout_marginTop="@dimen/spacing_micro"
        tools:text="9:00 AM - 11:30 AM / Room 1" />

    <ImageView
        android:id="@+id/slot_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/slot_title"
        app:layout_constraintBottom_toBottomOf="@id/slot_description"
        android:importantForAccessibility="no"
        android:alpha=".15"
        tools:src="@drawable/ic_food" />

</android.support.constraint.ConstraintLayout>
