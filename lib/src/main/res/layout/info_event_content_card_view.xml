<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/color_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:background="@color/io16_accent_green">

            <ImageView
                android:id="@+id/event_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/event_content_card_top_padding"
                android:paddingEnd="@dimen/padding_normal"
                android:paddingStart="@dimen/padding_normal"
                tools:src="@drawable/ic_navview_info"/>

            <TextView
                android:id="@+id/event_title"
                style="@style/Info.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                tools:text="Office Hours &amp; App Reviews"/>
        </LinearLayout>

        <TextView
            android:id="@+id/event_content_description"
            style="@style/Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/placeholder_lorem_ipsum"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/event_view_sessions"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal"
                android:text="@string/view_sessions_text"
                android:textColor="@color/lightish_blue"/>

            <Button
                android:id="@+id/event_view_map"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal"
                android:text="@string/view_map_text"
                android:textColor="@color/lightish_blue"/>
        </LinearLayout>
    </LinearLayout>
</merge>