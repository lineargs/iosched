<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/my_io_dialog_avatar_dimen"
            android:layout_height="@dimen/my_io_dialog_avatar_dimen"
            android:importantForAccessibility="no"
            android:layout_marginStart="@dimen/my_io_dialog_header_margin"
            android:src="@drawable/ic_default_avatar" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_io_dialog_header_margin"
            android:layout_marginEnd="@dimen/my_io_dialog_header_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/MyIODialog.Header.Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:id="@+id/email"
                style="@style/MyIODialog.Header.Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1" />
        </LinearLayout>


            <ImageView
                android:id="@+id/signed_in_circle_check"
                android:layout_width="@dimen/my_io_dialog_check_circle_dimen"
                android:layout_height="@dimen/my_io_dialog_check_circle_dimen"
                android:layout_marginEnd="@dimen/my_io_dialog_header_margin"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_check_circle" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/my_io_dialog_spacer_margin_bottom"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/body_intro"
        style="@style/MyIODialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/first_bullet_point"
        style="@style/MyIODialog.Body.BulletedPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/second_bullet_point"
        style="@style/MyIODialog.Body.BulletedPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/auth_button"
            style="@style/MyIODialog.Body.AuthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>