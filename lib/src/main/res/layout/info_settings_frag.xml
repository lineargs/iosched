<android.support.v4.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/settings_content_padding"
            android:paddingTop="@dimen/settings_content_padding">

            <TextView
                android:id="@+id/settingsTimeZoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/settingsTimeZoneSwitch"
                android:ellipsize="end"
                android:padding="@dimen/padding_normal"
                android:text="@string/settings_time_zone_label" />

            <Switch
                android:id="@+id/settingsTimeZoneSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/settingsTimeZoneLabel"
                android:padding="@dimen/padding_normal" />

            <TextView
                android:id="@+id/settingsNotificationsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/settingsNotificationsSwitch"
                android:layout_alignParentStart="true"
                android:padding="@dimen/padding_normal"
                android:text="@string/settings_enable_notifications" />

            <Switch
                android:id="@+id/settingsNotificationsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/settingsTimeZoneSwitch"
                android:layout_toEndOf="@+id/settingsNotificationsLabel"
                android:padding="@dimen/padding_normal" />

            <TextView
                android:id="@+id/settingsAnonStatisticsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/settingsNotificationsLabel"
                android:padding="@dimen/padding_normal"
                android:text="@string/settings_enable_anon_statistics" />

            <Switch
                android:id="@+id/settingsAnonStatisticsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/settingsNotificationsSwitch"
                android:layout_toEndOf="@+id/settingsAnonStatisticsLabel"
                android:padding="@dimen/padding_normal" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/settings_content_padding"
            android:paddingTop="@dimen/settings_content_padding">

            <Button
                android:id="@+id/termsOfServiceLink"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_normal"
                android:paddingEnd="@dimen/padding_normal"
                android:text="@string/about_terms" />

            <Button
                android:id="@+id/privacyPolicyLink"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_normal"
                android:paddingEnd="@dimen/padding_normal"
                android:text="@string/about_privacy_policy" />

            <TextView
                android:id="@+id/appVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_normal"
                android:paddingStart="@dimen/padding_normal"
                android:paddingEnd="@dimen/padding_normal"
                android:text="@string/about_app_version"
                tools:text="Version 1.4.278" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
