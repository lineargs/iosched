<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_normal">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_normal"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/wifi_network_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingStart="@dimen/padding_normal"
                android:text="@string/wifi_network_label"
                android:textAppearance="@style/TextAppearance.H5.Caps" />

            <TextView
                android:id="@+id/wiFiNetworkValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/wifi_network_label"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/padding_normal"
                android:textAppearance="@style/TextAppearance.H5"
                tools:text="IO2017"/>

            <TextView
                android:id="@+id/wifi_password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/wifi_network_label"
                android:layout_marginTop="@dimen/padding_normal"
                android:paddingStart="@dimen/padding_normal"
                android:text="@string/wifi_password_label"
                android:textAppearance="@style/TextAppearance.H5.Caps" />

            <TextView
                android:id="@+id/wiFiPasswordValue"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/wifi_password_label"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/wiFiNetworkValue"
                android:padding="@dimen/padding_normal"
                android:textAppearance="@style/TextAppearance.H5"
                android:drawableStart="@drawable/ic_copy"
                android:drawablePadding="@dimen/spacing_normal"
                tools:text="inputoutput" />

        </RelativeLayout>

        <com.google.samples.apps.iosched.info.event.EventContentView
            android:id="@+id/sandboxEventContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxColor="@color/neon_blue"
            app:eventIcon="@drawable/ic_sandbox"
            app:eventTitle="@string/event_sandbox_title"
            app:mapLinkUri="@string/view_sandbox_map_url"
            app:sessionsLinkUri="@string/view_sandbox_sessions_url" />

        <com.google.samples.apps.iosched.info.event.EventContentView
            android:id="@+id/codeLabsEventContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxColor="@color/io16_accent_green"
            app:eventIcon="@drawable/ic_codelab"
            app:eventTitle="@string/event_codelabs_title"
            app:mapLinkUri="@string/view_sandbox_map_url"
            app:sessionsLinkUri="@string/view_codelabs_sessions_url" />

        <com.google.samples.apps.iosched.info.event.EventContentView
            android:id="@+id/officeHoursEventContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxColor="@color/io16_accent_red"
            app:eventIcon="@drawable/ic_officehours"
            app:eventTitle="@string/event_officehours_title"
            app:mapLinkUri="@string/view_officehours_map_url"
            app:sessionsLinkUri="@string/view_officehours_sessions_url" />

        <com.google.samples.apps.iosched.info.event.EventContentView
            android:id="@+id/afterHoursEventContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxColor="@color/lightish_blue"
            app:eventIcon="@drawable/ic_afterhours"
            app:eventTitle="@string/event_afterhours_title"
            app:mapLinkUri="@string/view_afterhours_map_url"
            app:sessionsLinkUri="@string/view_afterhours_sessions_url" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>