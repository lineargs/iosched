<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_micro">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?selectableItemBackground"
            android:padding="@dimen/padding_normal"
            android:text="@string/travel_shuttle_info_title"
            android:textAppearance="@style/TextAppearance.H5.Caps"
            android:textColor="@color/collapsing_section" />

        <ImageView
            android:id="@+id/expand_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_normal"
            android:src="@drawable/ic_expand"
            android:tint="@color/collapsing_section"
            android:tintMode="src_in" />

        <TextView
            android:id="@+id/card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_title"
            android:padding="@dimen/padding_normal"
            android:textColorLink="@color/links"
            tools:text="This is a card description" />

    </RelativeLayout>

</merge>
